{
  "manifest_version": 3,
  "name": "AU Job Application Autofill",
  "version": "1.0.3",
  "description": "Auto-fill Australian job application forms â€” graduate, internship, and professional roles",
  "permissions": ["activeTab", "storage", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon48.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
